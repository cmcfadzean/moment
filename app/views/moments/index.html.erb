<%= component "nav" do %>
  <%= link_to 'ðŸ“… New Moment', new_moment_path %>
<% end %>
<%= component "container" do %>
  <% if @moments.blank? %>
    <%= component "null" do %>
      <%= image_tag "null.svg" %>
    <% end %>
  <% else %>
    <% @moments.each do |moment| %>
      <%= component "moment", title: moment.title, date: ( moment.date - Date.today() ).to_i, link: edit_moment_path(moment)  %>
    <% end %>
  <% end %>
<% end %>